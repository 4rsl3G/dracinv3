<section class="relative">
  <% if (hero) { %>
    <div class="relative h-[80vh] min-h-[520px] w-full overflow-hidden">
      <!-- Hero image -->
      <div class="absolute inset-0">
        <img src="<%= hero.cover %>" alt="<%= hero.name %>" class="w-full h-full object-cover blur-[0px] scale-[1.03]" />
        <div class="absolute inset-0 bg-gradient-to-t from-cs-bg via-cs-bg/40 to-black/10"></div>
        <div class="absolute inset-0 bg-gradient-to-r from-black/60 via-black/20 to-transparent"></div>
      </div>

      <!-- Hero content -->
      <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 h-full flex items-end pb-14">
        <div class="max-w-2xl">
          <div class="inline-flex items-center gap-2 mb-3">
            <span class="text-xs tracking-widest text-white/70 uppercase">Featured</span>
            <span class="text-xs px-2 py-1 rounded-full bg-white/10 border border-white/10">HD</span>
          </div>

          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-extrabold tracking-tight leading-[1.05]">
            <%= hero.name %>
          </h1>

          <p class="mt-4 text-white/75 text-sm sm:text-base leading-relaxed">
            Stream instantly with ultra-fast caching and a premium custom player experience.
          </p>

          <div class="mt-7 flex flex-wrap items-center gap-3">
            <a
              href="/watch/<%= encodeURIComponent(hero.code) %>?lang=<%= encodeURIComponent(lang) %>&ep=1"
              class="inline-flex items-center gap-2 bg-white text-black hover:bg-white/90 px-5 py-3 rounded-lg font-semibold shadow-glow transition"
            >
              <span class="inline-block w-2.5 h-2.5 bg-cs-accent rounded-sm"></span>
              Play
            </a>

            <button
              id="moreInfoBtn"
              class="inline-flex items-center gap-2 bg-white/10 hover:bg-white/15 border border-white/10 px-5 py-3 rounded-lg font-semibold transition"
            >
              More Info
            </button>

            <div class="text-xs text-white/50">
              Code: <span class="text-white/70"><%= hero.code %></span>
            </div>
          </div>
        </div>
      </div>

      <!-- More Info modal -->
      <div id="infoModal" class="hidden fixed inset-0 z-[60]">
        <div class="absolute inset-0 bg-black/70"></div>
        <div class="relative mx-auto max-w-2xl mt-20 bg-cs-surface border border-white/10 rounded-2xl shadow-glow overflow-hidden">
          <div class="p-5 border-b border-white/10 flex items-center justify-between">
            <div>
              <div class="text-sm text-white/60">Featured title</div>
              <div class="text-lg font-bold"><%= hero.name %></div>
            </div>
            <button id="closeInfo" class="px-3 py-2 rounded-lg bg-white/5 hover:bg-white/10 border border-white/10 text-sm">
              Close
            </button>
          </div>
          <div class="p-5 grid sm:grid-cols-[160px_1fr] gap-4">
            <div class="rounded-xl overflow-hidden bg-white/5 border border-white/10">
              <img src="<%= hero.cover %>" alt="" class="w-full h-full object-cover" />
            </div>
            <div class="text-sm text-white/75 leading-relaxed">
              This is a high-end Netflix-like UI demo:
              <ul class="mt-3 list-disc list-inside text-white/60 space-y-1">
                <li>SQLite cache-aside API caching</li>
                <li>AJAX search overlay</li>
                <li>Custom HLS.js player with episode switching</li>
              </ul>

              <div class="mt-4">
                <a class="inline-flex items-center gap-2 bg-cs-accent hover:bg-[#ff0f1d] text-white px-4 py-2 rounded-lg font-semibold transition"
                   href="/watch/<%= encodeURIComponent(hero.code) %>?lang=<%= encodeURIComponent(lang) %>&ep=1">
                  Watch now
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>

      <script>
        (function () {
          const modal = document.getElementById("infoModal");
          const openBtn = document.getElementById("moreInfoBtn");
          const closeBtn = document.getElementById("closeInfo");
          if (!modal || !openBtn || !closeBtn) return;

          const open = () => modal.classList.remove("hidden");
          const close = () => modal.classList.add("hidden");

          openBtn.addEventListener("click", open);
          closeBtn.addEventListener("click", close);
          modal.addEventListener("click", (e) => { if (e.target === modal.firstElementChild) close(); });
          document.addEventListener("keydown", (e) => { if (e.key === "Escape") close(); });
        })();
      </script>
    </div>
  <% } else { %>
    <!-- Hero skeleton -->
    <div class="h-[70vh] min-h-[420px] mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-10">
      <div class="h-full rounded-2xl bg-white/5 border border-white/10 overflow-hidden relative">
        <div class="absolute inset-0 skeleton"></div>
        <div class="relative p-10">
          <div class="h-6 w-40 rounded skeleton"></div>
          <div class="mt-4 h-12 w-[60%] rounded skeleton"></div>
          <div class="mt-3 h-4 w-[70%] rounded skeleton"></div>
          <div class="mt-8 flex gap-3">
            <div class="h-12 w-32 rounded skeleton"></div>
            <div class="h-12 w-32 rounded skeleton"></div>
          </div>
        </div>
      </div>
    </div>
  <% } %>
</section>

<section class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 pb-16">
  <div class="flex items-end justify-between mt-6">
    <div>
      <h2 class="text-lg font-bold tracking-tight">Trending Now</h2>
      <p class="text-sm text-white/60">Hover to preview the premium card motion.</p>
    </div>
  </div>

  <% if (grid && grid.length) { %>
    <div class="mt-5 grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-3">
      <% grid.forEach(function(item){ %>
        <a href="/watch/<%= encodeURIComponent(item.code) %>?lang=<%= encodeURIComponent(lang) %>&ep=1"
           class="group rounded-xl overflow-hidden bg-cs-surface border border-white/10 hover:border-white/20 transition transform hover:scale-[1.05] hover:z-10">
          <div class="aspect-[2/3] bg-white/5 overflow-hidden">
            <img src="<%= item.cover %>" alt="<%= item.name %>" class="w-full h-full object-cover group-hover:scale-[1.03] transition" loading="lazy" />
          </div>
          <div class="p-2.5">
            <div class="text-sm font-semibold leading-snug line-clamp-2"><%= item.name %></div>
            <div class="text-xs text-white/50 mt-1">Code: <%= item.code %></div>
          </div>
        </a>
      <% }) %>
    </div>
  <% } else { %>
    <!-- Grid skeleton -->
    <div class="mt-5 grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-3">
      <% for (let i=0;i<12;i++) { %>
        <div class="rounded-xl overflow-hidden bg-white/5 border border-white/10">
          <div class="aspect-[2/3] skeleton"></div>
          <div class="p-3 space-y-2">
            <div class="h-4 w-[80%] rounded skeleton"></div>
            <div class="h-3 w-[55%] rounded skeleton"></div>
          </div>
        </div>
      <% } %>
    </div>
  <% } %>
</section>
